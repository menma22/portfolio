---
// src/components/ProjectCard.astro
interface Props {
	title: string;
	description: string;
    imageUrl: string; // スクリーンショット画像のパス（publicフォルダ内）
    projectUrl: string; // SaaSのURL
    tags: string[];
}

const { title, description, imageUrl, projectUrl, tags } = Astro.props;

// タイトルからslugへのマッピング
const slugMap: Record<string, string> = {
  'New Fashion - AI Look Book': 'new-fashion',
  'Vagabonds Camp': 'vagabonds-camp',
  'UNESCO-VIEW': 'unesco-globe',
  'BRIEFLY': 'briefly',
  'HumorAI': 'humorai',
};

const reportSlug = slugMap[title] || '';
const reportUrl = reportSlug ? `/portfolio/projects/${reportSlug}` : '';
---

<div class="project-card-wrapper">
    <div class="relative h-full rounded-3xl bg-white/30 border border-white/40 p-6 overflow-hidden backdrop-blur-xl shadow-xl transition-all duration-500 hover:scale-[1.02] hover:bg-white/50 hover:shadow-blue-500/10 hover:border-white/60 group cursor-pointer" onclick={`window.open('${projectUrl}', '_blank')`}>
        
        <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none z-10"></div>

        <div class="relative aspect-video rounded-2xl overflow-hidden border border-gray-200/50 shadow-inner mb-6 group-hover:shadow-md transition-shadow">
            <div class="absolute inset-0 bg-gradient-to-tr from-gray-900/5 to-transparent z-10 pointer-events-none"></div>
            <img src={imageUrl} alt={title} class="w-full h-full object-cover object-top transform transition-transform duration-700 group-hover:scale-105" />
        </div>

        <div class="relative z-20">
            <div class="flex justify-between items-start mb-3">
                <h3 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-gray-900 to-gray-600 group-hover:to-blue-600 transition-colors">
                    {title}
                </h3>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-400 group-hover:text-blue-500 transition-colors transform group-hover:translate-x-1 group-hover:-translate-y-1">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
                </svg>
            </div>

            <p class="text-gray-600 line-clamp-2 mb-6 group-hover:text-gray-800 transition-colors">
                {description}
            </p>

            <div class="flex flex-wrap gap-2 mb-6">
                {tags.map((tag) => (
                    <span class="px-3 py-1 text-xs font-medium rounded-full bg-gray-100 border border-gray-200 text-gray-600 group-hover:bg-white group-hover:text-blue-600 group-hover:border-blue-100 transition-colors">
                        {tag}
                    </span>
                ))}
            </div>

            <!-- 詳しい紹介を表示ボタン -->
            {reportUrl && (
              <button 
                type="button"
                onclick={`event.stopPropagation(); window.location.href='${reportUrl}';`}
                class="block w-full py-3 px-6 rounded-xl 
                    bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500
                    hover:from-blue-600 hover:via-purple-600 hover:to-pink-600
                    text-white font-semibold text-sm text-center
                    shadow-lg shadow-blue-500/20 hover:shadow-blue-500/30
                    transform hover:scale-[1.03] active:scale-[0.98]
                    transition-all duration-300">
                <span class="inline-flex items-center justify-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m5.231 13.481L15 17.25m-4.5-15H5.625c-.621 0-1.125.504-1.125 1.125v16.5c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9zm3.75 11.625a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                  </svg>
                  詳しい紹介を表示
                </span>
              </button>
            )}
        </div>
    </div>
</div>
