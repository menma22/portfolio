// src/components/DetailModal.astro
// グラスモーフィズムの詳細レポートモーダルコンポーネント
---

<div id="detail-modal" class="fixed inset-0 z-50 hidden items-center justify-center p-4">
    <!-- オーバーレイ背景 -->
    <div id="modal-overlay" class="absolute inset-0 bg-black/40 backdrop-blur-sm"></div>
    
    <!-- モーダルコンテンツ -->
    <div id="modal-content" class="relative w-full max-w-4xl max-h-[90vh] overflow-y-auto rounded-3xl 
        bg-white/40
        border border-white/40 
        backdrop-blur-2xl 
        shadow-2xl
        transform transition-all duration-500 scale-95 opacity-0">
        
        <!-- ヘッダー部分 -->
        <div class="sticky top-0 z-10 flex items-center justify-between p-6 border-b border-white/30 bg-white/30 backdrop-blur-xl">
            <h2 id="modal-title" class="text-2xl md:text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-gray-900 via-blue-800 to-purple-800">
                プロダクト詳細
            </h2>
            <button id="modal-close" class="p-2 rounded-full bg-white/40 hover:bg-white/60 border border-white/20 transition-colors group">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-gray-600 group-hover:text-gray-900 transition-colors">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        
        <!-- コンテンツ本体 -->
        <div class="p-8 space-y-8">
            <!-- レポート本文 (HTMLで直接表示) -->
            <div id="modal-report" class="prose prose-gray max-w-none">
                <!-- レポート内容がここに挿入される -->
            </div>
            
            <!-- アクションボタン -->
            <div class="flex flex-col sm:flex-row gap-4 pt-4">
                <a id="modal-link" href="#" target="_blank" rel="noopener noreferrer" 
                    class="flex-1 flex items-center justify-center gap-3 px-8 py-4 rounded-2xl 
                    bg-gradient-to-r from-blue-600 to-purple-600 
                    hover:from-blue-500 hover:to-purple-500
                    text-white font-semibold text-lg
                    shadow-lg shadow-blue-500/25 hover:shadow-blue-500/40
                    transform hover:scale-[1.02] transition-all duration-300">
                    <span>サイトを開く</span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                    </svg>
                </a>
                <button id="modal-close-btn" 
                    class="flex-1 flex items-center justify-center gap-3 px-8 py-4 rounded-2xl 
                    bg-white/40 hover:bg-white/60
                    border border-white/40 hover:border-white/60
                    text-gray-700 font-semibold text-lg
                    transform hover:scale-[1.02] transition-all duration-300">
                    閉じる
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    #detail-modal.active {
        display: flex;
    }
    
    #detail-modal.active #modal-content {
        transform: scale(1);
        opacity: 1;
    }
    
    /* スクロールバーのスタイリング */
    #modal-content::-webkit-scrollbar {
        width: 8px;
    }
    
    #modal-content::-webkit-scrollbar-track {
        background: transparent;
    }
    
    #modal-content::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 4px;
    }
    
    #modal-content::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.3);
    }
    
    /* レポート用のスタイリング (proseクラスの拡張) */
    #modal-report h2 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: #1f2937;
        border-bottom: 2px solid rgba(59, 130, 246, 0.3);
        padding-bottom: 0.5rem;
    }
    
    #modal-report h3 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        color: #374151;
    }
    
    #modal-report p {
        color: #4b5563;
        line-height: 1.8;
        margin-bottom: 1rem;
    }
    
    #modal-report strong {
        color: #1f2937;
        font-weight: 600;
    }
</style>

