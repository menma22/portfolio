---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

// プロジェクトデータ（本来はCMSや別ファイルから取得しても良い）
const projects = [
    {
        title: "New Fashion - AI Look Book",
        description: "「スタイルを、もっと自由に。あなただけのLook Book」をコンセプトにした、失敗しないお買い物をサポートするAIファッションプラットフォーム。",
        imageUrl: "/portfolio/images/fashion-lookbook.png",
        projectUrl: "https://ai-vr-fashion-try-on-7ssg.bolt.host/coordinate",
        tags: ["React", "AI Styling", "Fashion Tech", "Bolt.new"]
    },
    {
        title: "Vagabonds Camp",
        description: "会議のスケジュール管理から議事録の共有までを一元管理。効率的なチームコラボレーションを実現するミーティングプラットフォーム。",
        imageUrl: "/portfolio/images/vagabonds-camp.png",
        projectUrl: "https://vagabonds-camp.vercel.app/",
        tags: ["Next.js", "Vercel", "Team Collaboration", "Meeting Management"]
    },
    {
        title: "UNESCO-VIEW",
        description: "3D地球儀で巡るユネスコ世界遺産の旅。美しく没入感のあるインターフェースで、世界中の遺産を探索できます。",
        imageUrl: "/portfolio/images/unesco-globe.png",
        projectUrl: "https://menma22.github.io/unesco-globe/",
        tags: ["3D Visualization", "React", "Interactive Map"]
    },
    {
        title: "BRIEFLY",
        description: "YouTubeチャンネルの更新を自動追跡し、AIが要約レターを作成する情報収集プラットフォーム。忙しい日々でも効率的に情報収集が可能です。",
        imageUrl: "/portfolio/images/briefly-app.png",
        projectUrl: "https://favorite-news-latter.vercel.app/",
        tags: ["Next.js", "AI Summary", "YouTube API", "Automation"]
    },
    {
        title: "HumorAI",
        description: "GPT-4oをファインチューニングし、文脈に応じた高度なユーモアを出力できる「自律思考型お笑いエージェント」のアーキテクチャを設計。",
        imageUrl: "/portfolio/images/humorai.png",
        projectUrl: "https://colab.research.google.com/drive/12qdjIENVTRI7poJj7z6zxD-Dv4060S7C?usp=sharing",
        tags: ["GPT-4o Fine-tuning", "Multi-Agent", "RAG", "W&B"]
    },
];
---

<Layout title="Mahiro's Portfolio">
	<main class="container mx-auto px-4 py-20">
        <!-- プロフィールセクション -->
        <section class="mb-20">
            <div class="relative rounded-2xl bg-slate-50/80 backdrop-blur-sm border border-slate-200/60 p-8 md:p-10 shadow-lg overflow-hidden">
                <!-- 控えめな背景装飾 -->
                <div class="absolute top-0 right-0 w-72 h-72 bg-blue-100/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
                
                <div class="relative z-10 flex flex-col md:flex-row items-center gap-8 md:gap-12">
                    <!-- 左側：プロフィール情報 -->
                    <div class="flex-1 text-center md:text-left">
                        <span class="inline-block px-3 py-1 rounded-md bg-blue-50 border border-blue-100 text-xs font-medium text-blue-600 mb-4">
                            AI Engineer & Builder
                        </span>
                        
                        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-slate-800">
                            黒川眞都
                        </h1>
                        
                        <div class="space-y-2.5 mb-6 text-slate-600">
                            <div class="flex items-center justify-center md:justify-start gap-3">
                                <svg class="w-4 h-4 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                                </svg>
                                <span>富山県立大学 工学部 知能ロボット工学科</span>
                            </div>
                            <div class="flex items-center justify-center md:justify-start gap-3">
                                <svg class="w-4 h-4 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                <span>学部3年</span>
                            </div>
                            <div class="flex items-center justify-center md:justify-start gap-3">
                                <svg class="w-4 h-4 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                                </svg>
                                <span>研究室：脳波解析</span>
                            </div>
                        </div>
                        
                        <!-- 趣味タグ（シンプルな青のみ） -->
                        <div class="flex flex-wrap gap-2 justify-center md:justify-start">
                            <span class="px-3 py-1 text-xs rounded-md bg-slate-100 border border-slate-200 text-slate-600">スノーボード</span>
                            <span class="px-3 py-1 text-xs rounded-md bg-slate-100 border border-slate-200 text-slate-600">写真</span>
                            <span class="px-3 py-1 text-xs rounded-md bg-slate-100 border border-slate-200 text-slate-600">音楽</span>
                            <span class="px-3 py-1 text-xs rounded-md bg-slate-100 border border-slate-200 text-slate-600">マンガ・アニメ</span>
                            <span class="px-3 py-1 text-xs rounded-md bg-slate-100 border border-slate-200 text-slate-600">AIツール</span>
                            <span class="px-3 py-1 text-xs rounded-md bg-slate-100 border border-slate-200 text-slate-600">最先端テック</span>
                        </div>
                    </div>
                    
                    <!-- 右側：プロフィール写真 -->
                    <div class="flex-shrink-0 order-first md:order-last">
                        <div class="relative w-44 h-44 md:w-56 md:h-56 rounded-full p-1 bg-gradient-to-br from-blue-400 to-blue-600 shadow-xl shadow-blue-500/20">
                            <div class="w-full h-full rounded-full overflow-hidden border-4 border-white">
                                <img 
                                    src="/portfolio/images/profile.jpg" 
                                    alt="黒川眞都" 
                                    class="w-full h-full object-cover object-top"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- ヒーローセクション -->
        <section class="text-center mb-32">
            <h2 class="text-5xl md:text-7xl font-extrabold mb-8 tracking-tight text-gray-900">
                Designing with <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600">Intelligence.</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
                最新のAI技術と洗練されたデザインを融合させ、実用的なSaaSプロダクトを構築しています。
            </p>
        </section>

        <section id="works">
            <h2 class="text-3xl font-bold mb-16 text-center flex items-center justify-center gap-4 text-gray-900 after:h-px after:flex-1 after:bg-gray-200 before:h-px before:flex-1 before:bg-gray-200">
                Featured Works
            </h2>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-10" style="display: grid; grid-template-columns: repeat(2, minmax(0, 1fr)); gap: 2.5rem;">
                {projects.map((project) => (
                    <ProjectCard {...project} />
                ))}
            </div>
        </section>
	</main>
    
    <footer class="text-center py-10 text-gray-500 text-sm border-t border-gray-200 mt-20 backdrop-blur-sm">
        <p>© 2025 Mahiro. All rights reserved.</p>
    </footer>
</Layout>

