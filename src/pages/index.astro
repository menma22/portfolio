---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import DetailModal from '../components/DetailModal.astro';

// プロジェクトデータ（本来はCMSや別ファイルから取得しても良い）
const projects = [
    {
        title: "New Fashion - AI Look Book",
        description: "「スタイルを、もっと自由に。あなただけのLook Book」をコンセプトにした、失敗しないお買い物をサポートするAIファッションプラットフォーム。",
        imageUrl: "/portfolio/images/fashion-lookbook.png",
        projectUrl: "https://ai-vr-fashion-try-on-7ssg.bolt.host/coordinate",
        tags: ["React", "AI Styling", "Fashion Tech", "Bolt.new"]
    },
    {
        title: "Vagabonds Camp",
        description: "会議のスケジュール管理から議事録の共有までを一元管理。効率的なチームコラボレーションを実現するミーティングプラットフォーム。",
        imageUrl: "/portfolio/images/vagabonds-camp.png",
        projectUrl: "https://vagabonds-camp.vercel.app/",
        tags: ["Next.js", "Vercel", "Team Collaboration", "Meeting Management"]
    },
    // 他のプロジェクト...
];
---

<Layout title="Mahiro's Portfolio">
	<main class="container mx-auto px-4 py-20">
        <section class="text-center mb-32">
            <div class="inline-block p-1 rounded-full bg-white/30 backdrop-blur-md border border-white/40 mb-6 shadow-md">
                <span class="block px-6 py-2 rounded-full bg-white/40 text-sm font-medium text-blue-600 shadow-sm border border-white/20">
                    AI Engineer & Builder
                </span>
            </div>
            <h1 class="text-6xl md:text-8xl font-extrabold mb-8 tracking-tight text-gray-900">
                Designing with <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600">Intelligence.</span>
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
                最新のAI技術と洗練されたデザインを融合させ、実用的なSaaSプロダクトを構築しています。
            </p>
        </section>

        <section id="works">
            <h2 class="text-3xl font-bold mb-16 text-center flex items-center justify-center gap-4 text-gray-900 after:h-px after:flex-1 after:bg-gray-200 before:h-px before:flex-1 before:bg-gray-200">
                Featured Works
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                {projects.map((project) => (
                    <ProjectCard {...project} />
                ))}
            </div>
        </section>
	</main>

    <!-- 詳細レポートモーダル -->
    <DetailModal />
    
    <footer class="text-center py-10 text-gray-500 text-sm border-t border-gray-200 mt-20 backdrop-blur-sm">
        <p>© 2025 Mahiro. All rights reserved.</p>
    </footer>
</Layout>
